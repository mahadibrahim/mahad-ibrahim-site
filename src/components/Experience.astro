---
import { experience } from '../data/site';
---

<section id="experience" class="experience">
  <div class="experience__container container">
    <header class="section-header reveal">
      <span class="section-label">Career</span>
      <h2 class="section-title">{experience.title}</h2>
    </header>

    <div class="experience__timeline">
      {experience.items.map((company) => (
        <div class="experience__company reveal">
          <div class="experience__company-header">
            <a
              href={company.url}
              class="experience__company-name"
              target="_blank"
              rel="noopener noreferrer"
            >
              {company.company}
              <svg class="experience__external-icon" viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
              </svg>
            </a>
          </div>

          <div class="experience__roles">
            {company.roles.map((role, roleIndex) => (
              <article class="experience__role">
                <div class="experience__role-marker">
                  <div class="experience__role-dot"></div>
                  {roleIndex < company.roles.length - 1 && (
                    <div class="experience__role-line"></div>
                  )}
                </div>

                <div class="experience__role-content">
                  <header class="experience__role-header">
                    <h3 class="experience__role-title">{role.title}</h3>
                    <span class="experience__role-date">{role.date}</span>
                  </header>

                  {role.description && (
                    <p class="experience__role-description">{role.description}</p>
                  )}

                  {role.highlights && role.highlights.length > 0 && (
                    <ul class="experience__highlights">
                      {role.highlights.map((highlight) => (
                        <li class="experience__highlight">{highlight}</li>
                      ))}
                    </ul>
                  )}

                  {role.tools && role.tools.length > 0 && (
                    <div class="experience__tools">
                      <span class="experience__tools-label">Research Stack:</span>
                      <span class="experience__tools-list">{role.tools.join(' â€¢ ')}</span>
                    </div>
                  )}
                </div>
              </article>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    background: var(--color-bg-elevated);
  }

  .experience__timeline {
    display: flex;
    flex-direction: column;
    gap: var(--space-4xl);
  }

  .experience__company {
    position: relative;
  }

  .experience__company-header {
    margin-bottom: var(--space-xl);
  }

  .experience__company-name {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-display);
    font-size: 1.75rem;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .experience__company-name:hover {
    color: var(--color-accent);
  }

  .experience__external-icon {
    opacity: 0.4;
    transition: opacity var(--transition-fast);
  }

  .experience__company-name:hover .experience__external-icon {
    opacity: 1;
  }

  .experience__roles {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
    padding-left: var(--space-xl);
    border-left: 1px solid var(--color-border);
    margin-left: var(--space-sm);
  }

  .experience__role {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-xl);
    position: relative;
  }

  .experience__role-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin-left: calc(-1 * var(--space-xl) - 5px);
  }

  .experience__role-dot {
    width: 10px;
    height: 10px;
    background: var(--color-accent);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .experience__role-line {
    width: 1px;
    flex: 1;
    background: var(--color-border);
    margin-top: var(--space-sm);
  }

  .experience__role-content {
    padding-bottom: var(--space-md);
  }

  .experience__role-header {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .experience__role-title {
    font-family: var(--font-body);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }

  .experience__role-date {
    font-size: 0.8125rem;
    color: var(--color-text-tertiary);
    font-weight: 500;
  }

  .experience__role-description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .experience__highlights {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .experience__highlight {
    position: relative;
    padding-left: var(--space-lg);
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.65;
  }

  .experience__highlight::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.65em;
    width: 6px;
    height: 1px;
    background: var(--color-accent);
  }

  .experience__tools {
    font-size: 0.8125rem;
    color: var(--color-text-tertiary);
  }

  .experience__tools-label {
    font-weight: 600;
    margin-right: var(--space-xs);
  }

  .experience__tools-list {
    color: var(--color-text-secondary);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .experience__roles {
      padding-left: var(--space-lg);
    }

    .experience__role-marker {
      margin-left: calc(-1 * var(--space-lg) - 5px);
    }

    .experience__role {
      gap: var(--space-md);
    }

    .experience__role-header {
      flex-direction: column;
      gap: var(--space-xs);
    }
  }
</style>
