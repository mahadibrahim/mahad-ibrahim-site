---
import { education } from '../data/site';
---

<section id="education" class="education">
  <div class="education__container container">
    <header class="section-header reveal">
      <span class="section-label">Background</span>
      <h2 class="section-title">{education.title}</h2>
    </header>

    <div class="education__grid">
      {education.items.map((item, index) => (
        <article class="education__item reveal" style={`--delay: ${index * 0.1}s`}>
          <div class="education__index">
            <span class="education__number">{String(index + 1).padStart(2, '0')}</span>
          </div>

          <div class="education__content">
            <header class="education__header">
              <h3 class="education__degree">{item.degree}</h3>
              <a
                href={item.url}
                class="education__school"
                target="_blank"
                rel="noopener noreferrer"
              >
                {item.school}
              </a>
              <span class="education__date">{item.date}</span>
            </header>

            {item.description && (
              <p class="education__description">{item.description}</p>
            )}

            {item.note && (
              <p class="education__note">{item.note}</p>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .education {
    background: var(--color-bg);
  }

  .education__grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .education__item {
    display: grid;
    grid-template-columns: 60px 1fr;
    gap: var(--space-xl);
    padding-bottom: var(--space-3xl);
    border-bottom: 1px solid var(--color-border);
    animation-delay: var(--delay);
  }

  .education__item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .education__index {
    display: flex;
    justify-content: center;
  }

  .education__number {
    font-family: var(--font-display);
    font-size: 2rem;
    font-style: italic;
    color: var(--color-accent);
    opacity: 0.5;
  }

  .education__content {
    max-width: 600px;
  }

  .education__header {
    margin-bottom: var(--space-md);
  }

  .education__degree {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: var(--space-xs);
    line-height: 1.3;
  }

  .education__school {
    display: block;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    margin-bottom: var(--space-xs);
    transition: color var(--transition-fast);
  }

  .education__school:hover {
    color: var(--color-accent-hover);
  }

  .education__date {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-text-tertiary);
    font-weight: 500;
  }

  .education__description {
    font-size: 0.9375rem;
    font-style: italic;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-sm);
  }

  .education__note {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .education__item {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .education__index {
      justify-content: flex-start;
    }

    .education__number {
      font-size: 1.5rem;
    }
  }
</style>
