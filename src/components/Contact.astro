---
import { contact } from '../data/site';
---

<section id="contact" class="contact">
  <div class="contact__container container container--narrow">
    <div class="contact__content reveal">
      <span class="section-label">Connect</span>
      <h2 class="contact__title">{contact.title}</h2>
      <p class="contact__description">{contact.content}</p>

      <a href={`mailto:${contact.email}`} class="contact__button">
        <span class="contact__button-text">Say Hello</span>
        <svg class="contact__button-icon" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .contact {
    background: var(--color-bg);
    text-align: center;
    padding: var(--space-5xl) 0;
  }

  .contact__content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .contact__title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-top: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .contact__description {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    line-height: 1.8;
    max-width: 480px;
    margin-bottom: var(--space-2xl);
  }

  .contact__button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-md);
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    padding: var(--space-lg) var(--space-2xl);
    border: 1px solid var(--color-text);
    border-radius: 4px;
    transition: all var(--transition-fast);
    position: relative;
    overflow: hidden;
  }

  .contact__button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-text);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--transition-base);
    z-index: 0;
  }

  .contact__button:hover::before {
    transform: scaleX(1);
  }

  .contact__button-text,
  .contact__button-icon {
    position: relative;
    z-index: 1;
    transition: color var(--transition-fast);
  }

  .contact__button:hover .contact__button-text,
  .contact__button:hover .contact__button-icon {
    color: var(--color-bg);
  }

  .contact__button-icon {
    transition: transform var(--transition-fast), color var(--transition-fast);
  }

  .contact__button:hover .contact__button-icon {
    transform: translateX(4px);
  }
</style>
