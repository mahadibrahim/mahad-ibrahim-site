---
import { publications } from '../data/extended';
---

<section id="publications" class="publications">
  <div class="publications__container container">
    <header class="section-header reveal">
      <span class="section-label">Research</span>
      <h2 class="section-title">{publications.title}</h2>
    </header>

    <div class="publications__grid">
      {publications.featured.map((pub, index) => (
        <article class="publication reveal" style={`--delay: ${index * 0.1}s`}>
          <div class="publication__content">
            <header class="publication__header">
              <span class="publication__source">{pub.publication}</span>
              <span class="publication__date">{pub.date}</span>
            </header>

            <h3 class="publication__title">
              <a href={pub.url} target="_blank" rel="noopener noreferrer">
                {pub.title}
                <svg class="publication__link-icon" viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                </svg>
              </a>
            </h3>

            <p class="publication__description">{pub.description}</p>
          </div>
        </article>
      ))}
    </div>

    <div class="publications__footer reveal">
      <a href="/more#publications" class="publications__view-all">
        View all publications
        <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .publications {
    background: var(--color-bg-elevated);
  }

  .publications__grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .publication {
    padding: var(--space-xl);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: all var(--transition-base);
    animation-delay: var(--delay);
  }

  .publication:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
  }

  .publication__header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-sm);
  }

  .publication__source {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .publication__date {
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
  }

  .publication__title {
    font-family: var(--font-display);
    font-size: 1.125rem;
    line-height: 1.4;
    margin-bottom: var(--space-sm);
  }

  .publication__title a {
    color: var(--color-text);
    text-decoration: none;
    display: inline;
    transition: color var(--transition-fast);
  }

  .publication__title a:hover {
    color: var(--color-accent);
  }

  .publication__link-icon {
    display: inline-block;
    vertical-align: middle;
    margin-left: var(--space-xs);
    opacity: 0.4;
    transition: opacity var(--transition-fast);
  }

  .publication__title a:hover .publication__link-icon {
    opacity: 1;
  }

  .publication__description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .publications__footer {
    margin-top: var(--space-2xl);
    text-align: center;
  }

  .publications__view-all {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    padding: var(--space-sm) var(--space-lg);
    border: 1px solid var(--color-accent);
    border-radius: 100px;
    transition: all var(--transition-fast);
  }

  .publications__view-all:hover {
    background: var(--color-accent);
    color: var(--color-bg);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .publication {
      padding: var(--space-lg);
    }

    .publication__header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }
  }
</style>
