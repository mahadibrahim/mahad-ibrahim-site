---
import { about } from '../data/site';

const paragraphs = about.content.split('\n\n');
---

<section id="about" class="about">
  <div class="about__container container">
    <header class="section-header reveal">
      <span class="section-label">About</span>
      <h2 class="section-title">{about.title}</h2>
    </header>

    <div class="about__grid">
      <div class="about__image-wrapper reveal">
        <div class="about__image-frame">
          <img src={about.image} alt="Mahad" class="about__image" loading="lazy" />
        </div>
      </div>

      <div class="about__content reveal">
        <div class="about__text">
          {paragraphs.map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>

        <div class="about__skills">
          <h3 class="about__skills-title">Core Competencies</h3>
          <ul class="about__skills-list">
            {about.skills.map((skill) => (
              <li class="about__skill">{skill}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    background: var(--color-bg);
  }

  .about__grid {
    display: grid;
    grid-template-columns: 320px 1fr;
    gap: var(--space-4xl);
    align-items: start;
  }

  .about__image-wrapper {
    position: sticky;
    top: 100px;
  }

  .about__image-frame {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 50%;
    background: var(--color-border-subtle);
    border: 3px solid var(--color-border);
  }

  .about__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .about__image-frame:hover .about__image {
    transform: scale(1.05);
  }

  .about__content {
    max-width: 640px;
  }

  .about__text {
    margin-bottom: var(--space-3xl);
  }

  .about__text p {
    font-size: 1.0625rem;
    line-height: 1.85;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  .about__text p:last-child {
    margin-bottom: 0;
  }

  .about__skills-title {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-lg);
  }

  .about__skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    list-style: none;
  }

  .about__skill {
    font-size: 0.8125rem;
    font-weight: 500;
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 100px;
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .about__skill:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .about__grid {
      grid-template-columns: 1fr;
      gap: var(--space-3xl);
    }

    .about__image-wrapper {
      position: relative;
      top: 0;
      max-width: 240px;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .about__image-wrapper {
      max-width: 180px;
    }
  }
</style>
