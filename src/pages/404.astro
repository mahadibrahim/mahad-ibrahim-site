---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Mahad">
  <section class="error-page">
    <div class="error-page__container container">
      <span class="error-page__code">404</span>
      <h1 class="error-page__title">Page not found</h1>
      <p class="error-page__message">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a href="/" class="error-page__link">
        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to home
      </a>
    </div>
  </section>
</Layout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-xl);
  }

  .error-page__container {
    max-width: 480px;
  }

  .error-page__code {
    display: block;
    font-family: var(--font-display);
    font-size: clamp(6rem, 20vw, 10rem);
    font-style: italic;
    line-height: 1;
    color: var(--color-border);
    margin-bottom: var(--space-lg);
  }

  .error-page__title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: var(--color-text);
    margin-bottom: var(--space-md);
  }

  .error-page__message {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-2xl);
  }

  .error-page__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    padding: var(--space-md) var(--space-xl);
    border: 1px solid var(--color-accent);
    border-radius: 4px;
    transition: all var(--transition-fast);
  }

  .error-page__link:hover {
    background: var(--color-accent);
    color: white;
  }

  .error-page__link svg {
    transition: transform var(--transition-fast);
  }

  .error-page__link:hover svg {
    transform: translateX(-4px);
  }
</style>
