---
import Layout from '../layouts/Layout.astro';
import { earlierCareer, moreProjects, publications, awards, teaching } from '../data/extended';
---

<Layout title="More - Mahad">
  <main class="more-page">
    <div class="more-page__container container">
      <header class="more-page__header">
        <a href="/" class="more-page__back">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back to Home
        </a>
        <h1 class="more-page__title">More About My Work</h1>
        <p class="more-page__subtitle">Extended career history, additional projects, publications, and awards</p>
      </header>

      <!-- Earlier Career Section -->
      <section id="earlier-career" class="more-section">
        <header class="more-section__header">
          <span class="section-label">Background</span>
          <h2 class="section-title">{earlierCareer.title}</h2>
          <p class="more-section__subtitle">{earlierCareer.subtitle}</p>
        </header>

        <div class="career-timeline">
          {earlierCareer.items.map((company) => (
            <div class="career-item">
              <div class="career-item__header">
                {company.url ? (
                  <a href={company.url} class="career-item__company" target="_blank" rel="noopener noreferrer">
                    {company.company}
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                    </svg>
                  </a>
                ) : (
                  <span class="career-item__company">{company.company}</span>
                )}
              </div>

              {company.roles.map((role) => (
                <article class="career-role">
                  <header class="career-role__header">
                    <h3 class="career-role__title">{role.title}</h3>
                    <div class="career-role__meta">
                      <span class="career-role__date">{role.date}</span>
                      {role.location && <span class="career-role__location">{role.location}</span>}
                    </div>
                  </header>

                  {role.description && (
                    <p class="career-role__description">{role.description}</p>
                  )}

                  {role.highlights && role.highlights.length > 0 && (
                    <ul class="career-role__highlights">
                      {role.highlights.map((highlight) => (
                        <li>{highlight}</li>
                      ))}
                    </ul>
                  )}
                </article>
              ))}
            </div>
          ))}
        </div>
      </section>

      <!-- Additional Projects Section -->
      <section id="projects" class="more-section">
        <header class="more-section__header">
          <span class="section-label">Portfolio</span>
          <h2 class="section-title">{moreProjects.title}</h2>
          <p class="more-section__subtitle">{moreProjects.subtitle}</p>
        </header>

        <div class="projects-grid">
          {moreProjects.items.map((project) => (
            <article class="project-card">
              <header class="project-card__header">
                <span class="project-card__client">{project.client}</span>
                <span class="project-card__date">{project.date}</span>
              </header>

              <h3 class="project-card__title">
                {project.url ? (
                  <a href={project.url} target="_blank" rel="noopener noreferrer">
                    {project.title}
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                    </svg>
                  </a>
                ) : (
                  project.title
                )}
              </h3>

              <p class="project-card__description">{project.description}</p>

              {project.highlights && project.highlights.length > 0 && (
                <ul class="project-card__highlights">
                  {project.highlights.map((highlight) => (
                    <li>{highlight}</li>
                  ))}
                </ul>
              )}

              <div class="project-card__tags">
                {project.tags.map((tag) => (
                  <span class="project-card__tag">{tag}</span>
                ))}
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- Publications Section -->
      <section id="publications" class="more-section">
        <header class="more-section__header">
          <span class="section-label">Research</span>
          <h2 class="section-title">All Publications</h2>
        </header>

        <div class="publications-list">
          {publications.all.map((pub) => (
            <article class="publication-item">
              <header class="publication-item__header">
                <span class="publication-item__source">{pub.publication}</span>
                {pub.date && <span class="publication-item__date">{pub.date}</span>}
              </header>

              <h3 class="publication-item__title">
                {pub.url ? (
                  <a href={pub.url} target="_blank" rel="noopener noreferrer">
                    {pub.title}
                    <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                    </svg>
                  </a>
                ) : (
                  pub.title
                )}
              </h3>

              <p class="publication-item__description">{pub.description}</p>
            </article>
          ))}
        </div>
      </section>

      <!-- Awards Section -->
      <section id="awards" class="more-section">
        <header class="more-section__header">
          <span class="section-label">Recognition</span>
          <h2 class="section-title">{awards.title}</h2>
        </header>

        <div class="awards-grid">
          {awards.items.map((award: { title: string; organization: string; date: string; description: string; project?: string }) => (
            <article class="award-card">
              <header class="award-card__header">
                <span class="award-card__org">{award.organization}</span>
                {award.date && <span class="award-card__date">{award.date}</span>}
              </header>

              <h3 class="award-card__title">{award.title}</h3>
              <p class="award-card__description">{award.description}</p>
              {award.project && (
                <span class="award-card__project">Project: {award.project}</span>
              )}
            </article>
          ))}
        </div>
      </section>

      <!-- Teaching Section -->
      <section id="teaching" class="more-section">
        <header class="more-section__header">
          <span class="section-label">Academia</span>
          <h2 class="section-title">{teaching.title}</h2>
        </header>

        <div class="teaching-grid">
          {teaching.items.map((item) => (
            <article class="teaching-card">
              <header class="teaching-card__header">
                <span class="teaching-card__institution">{item.institution}</span>
                <span class="teaching-card__date">{item.date}</span>
              </header>

              <h3 class="teaching-card__course">{item.course}</h3>
              <span class="teaching-card__role">{item.role}</span>
              <p class="teaching-card__description">{item.description}</p>
            </article>
          ))}
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .more-page {
    padding-top: 120px;
    padding-bottom: var(--space-4xl);
  }

  .more-page__container {
    max-width: 900px;
  }

  .more-page__header {
    margin-bottom: var(--space-4xl);
    padding-bottom: var(--space-3xl);
    border-bottom: 1px solid var(--color-border);
  }

  .more-page__back {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    margin-bottom: var(--space-xl);
    transition: color var(--transition-fast);
  }

  .more-page__back:hover {
    color: var(--color-accent);
  }

  .more-page__title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: var(--space-md);
  }

  .more-page__subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
  }

  /* Sections */
  .more-section {
    margin-bottom: var(--space-4xl);
    padding-bottom: var(--space-4xl);
    border-bottom: 1px solid var(--color-border);
  }

  .more-section:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .more-section__header {
    margin-bottom: var(--space-2xl);
  }

  .more-section__subtitle {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin-top: var(--space-sm);
  }

  /* Career Timeline */
  .career-timeline {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .career-item {
    padding-left: var(--space-xl);
    border-left: 1px solid var(--color-border);
  }

  .career-item__header {
    margin-bottom: var(--space-lg);
    margin-left: calc(-1 * var(--space-xl) - 1px);
    padding-left: var(--space-xl);
    border-left: 2px solid var(--color-accent);
  }

  .career-item__company {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--color-text);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    transition: color var(--transition-fast);
  }

  a.career-item__company:hover {
    color: var(--color-accent);
  }

  .career-role {
    margin-bottom: var(--space-xl);
  }

  .career-role:last-child {
    margin-bottom: 0;
  }

  .career-role__header {
    margin-bottom: var(--space-sm);
  }

  .career-role__title {
    font-family: var(--font-body);
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-xs);
  }

  .career-role__meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    font-size: 0.8125rem;
    color: var(--color-text-tertiary);
  }

  .career-role__location::before {
    content: "â€¢";
    margin-right: var(--space-md);
  }

  .career-role__description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-md);
  }

  .career-role__highlights {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .career-role__highlights li {
    position: relative;
    padding-left: var(--space-lg);
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .career-role__highlights li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 6px;
    height: 1px;
    background: var(--color-accent);
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
  }

  .project-card {
    padding: var(--space-xl);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: all var(--transition-base);
  }

  .project-card:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
  }

  .project-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
  }

  .project-card__client {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .project-card__date {
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
  }

  .project-card__title {
    font-family: var(--font-display);
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .project-card__title a {
    color: inherit;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    transition: color var(--transition-fast);
  }

  .project-card__title a:hover {
    color: var(--color-accent);
  }

  .project-card__description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .project-card__highlights {
    list-style: none;
    margin-bottom: var(--space-md);
  }

  .project-card__highlights li {
    position: relative;
    padding-left: var(--space-md);
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-xs);
  }

  .project-card__highlights li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.55em;
    width: 4px;
    height: 1px;
    background: var(--color-accent);
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: auto;
  }

  .project-card__tag {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    padding: 3px 8px;
    background: var(--color-border-subtle);
    color: var(--color-text-secondary);
    border-radius: 3px;
    text-transform: uppercase;
  }

  /* Publications List */
  .publications-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .publication-item {
    padding: var(--space-lg);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: all var(--transition-base);
  }

  .publication-item:hover {
    border-color: var(--color-accent);
  }

  .publication-item__header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-xs);
  }

  .publication-item__source {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .publication-item__date {
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
  }

  .publication-item__title {
    font-family: var(--font-display);
    font-size: 1rem;
    line-height: 1.4;
    margin-bottom: var(--space-xs);
  }

  .publication-item__title a {
    color: var(--color-text);
    text-decoration: none;
    display: inline;
    transition: color var(--transition-fast);
  }

  .publication-item__title a:hover {
    color: var(--color-accent);
  }

  .publication-item__title svg {
    display: inline;
    vertical-align: middle;
    margin-left: var(--space-xs);
    opacity: 0.4;
  }

  .publication-item__description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  /* Awards Grid */
  .awards-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .award-card {
    padding: var(--space-xl);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .award-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
  }

  .award-card__org {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .award-card__date {
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
  }

  .award-card__title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: var(--space-sm);
  }

  .award-card__description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .award-card__project {
    display: inline-block;
    margin-top: var(--space-md);
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-accent);
    padding: 4px 10px;
    background: var(--color-border-subtle);
    border-radius: 100px;
  }

  /* Teaching */
  .teaching-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .teaching-card {
    padding: var(--space-xl);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .teaching-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
  }

  .teaching-card__institution {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .teaching-card__date {
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
  }

  .teaching-card__course {
    font-family: var(--font-display);
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: var(--space-xs);
    line-height: 1.3;
  }

  .teaching-card__role {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
  }

  .teaching-card__description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .career-item {
      padding-left: var(--space-lg);
    }

    .career-item__header {
      margin-left: calc(-1 * var(--space-lg) - 1px);
      padding-left: var(--space-lg);
    }
  }

  @media (max-width: 480px) {
    .more-page {
      padding-top: 100px;
    }

    .project-card,
    .publication-item,
    .award-card {
      padding: var(--space-lg);
    }

    .project-card__header,
    .publication-item__header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }
  }
</style>
